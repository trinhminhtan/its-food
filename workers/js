export default {
  async fetch(request, env) {
    const url = new URL(request.url);

    function sanitizeInput(input) {
      return input ? input.replace(/[<>"'(){}]/g, "") : "";
    }
    
    function toUpperCase(input) {
      return input ? input.toUpperCase() : "";
    }

    // L·∫•y gi·ªù theo GMT+7
    function getVNTime() {
      return new Date(new Date().toLocaleString("en-US", { timeZone: "Asia/Ho_Chi_Minh" }));
    }

    if (request.method === "POST" && url.pathname === "/api/orders") {
      try {
        const data = await request.json();
        if (!data.name || !data.drink || !data.quantity) {
          return new Response(JSON.stringify({ error: "Thi·∫øu th√¥ng tin b·∫Øt bu·ªôc (t√™n, th·ª©c u·ªëng, s·ªë l∆∞·ª£ng)." }), {
            status: 400,
            headers: { "Content-Type": "application/json" },
          });
        }

        data.name = toUpperCase(sanitizeInput(data.name));
        data.drink = toUpperCase(sanitizeInput(data.drink));
        data.food = toUpperCase(data.food ? sanitizeInput(data.food) : "");
        data.quantity = parseInt(data.quantity, 10) || 1;
        data.size = toUpperCase(data.size ? sanitizeInput(data.size) : "");
        data.extra = data.extra || false;

        const today = getVNTime().toISOString().split("T")[0];

        let orders = {};
        try {
          const res = await env.ORDERS_BUCKET.get("orders.json");
          if (res) {
            orders = await res.json();
          } else {
            orders = {};
          }
        } catch (e) {
          orders = {};
        }

        orders[today] = orders[today] || [];
        orders[today] = orders[today].filter(order => order.name !== data.name);
        orders[today].push(data);

        await env.ORDERS_BUCKET.put("orders.json", JSON.stringify(orders));

        return new Response(JSON.stringify({ message: "ƒê√£ l∆∞u ƒë∆°n h√†ng!" }), {
          status: 200,
          headers: {
            "Content-Type": "application/json",
            "Access-Control-Allow-Origin": "*",
            "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
            "Access-Control-Allow-Headers": "Content-Type",
          },
        });
      } catch (error) {
        return new Response(JSON.stringify({ error: "L·ªói server: " + error.message }), {
          status: 500,
          headers: { "Content-Type": "application/json" },
        });
      }
    }

    if (request.method === "GET" && url.pathname.startsWith("/api/orders")) {
      try {
        const res = await env.ORDERS_BUCKET.get("orders.json");
        const orders = res ? await res.json() : {};

        return new Response(JSON.stringify(orders), {
          headers: {
            "Content-Type": "application/json",
            "Access-Control-Allow-Origin": "*",
          },
        });
      } catch (error) {
        return new Response(JSON.stringify({ error: "L·ªói server khi l·∫•y data: " + error.message }), {
          status: 500,
          headers: { "Content-Type": "application/json" },
        });
      }
    }

    if (request.method === "OPTIONS") {
      return new Response(null, {
        status: 204,
        headers: {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
          "Access-Control-Allow-Headers": "Content-Type",
        },
      });
    }


        // üü¢ API: Th·ªëng k√™ ƒë∆°n h√†ng theo ng√†y/th√°ng
        if (request.method === "GET" && url.pathname === "/api/stats") {
          try {
            const res = await env.ORDERS_BUCKET.get("orders.json");
            const orders = res ? await res.json() : {};
            
            const stats = {};
            for (const [date, orderList] of Object.entries(orders)) {
              stats[date] = orderList.reduce((acc, order) => {
                const key = `${order.drink} (${order.size})`;
                acc[key] = (acc[key] || 0) + order.quantity;
                if (order.food) acc[order.food] = (acc[order.food] || 0) + 1;
                return acc;
              }, {});
            }
    
            return new Response(JSON.stringify(stats), {
              headers: { "Content-Type": "application/json", "Access-Control-Allow-Origin": "*" },
            });
          } catch (error) {
            return new Response(JSON.stringify({ error: "L·ªói khi l·∫•y th·ªëng k√™: " + error.message }), {
              status: 500,
              headers: { "Content-Type": "application/json" },
            });
          }
        }
    
        // üî¥ API: X√≥a ƒë∆°n h√†ng theo ng√†y ho·∫∑c to√†n b·ªô
        if (request.method === "DELETE" && url.pathname.startsWith("/api/orders")) {
          try {
            const dateParam = url.searchParams.get("date");
            const res = await env.ORDERS_BUCKET.get("orders.json");
            let orders = res ? await res.json() : {};
    
            if (dateParam) {
              // X√≥a ƒë∆°n h√†ng c·ªßa ng√†y c·ª• th·ªÉ
              if (orders[dateParam]) {
                delete orders[dateParam];
              }
            } else if (url.pathname.endsWith("/all")) {
              // X√≥a to√†n b·ªô d·ªØ li·ªáu
              orders = {};
            } else {
              return new Response(JSON.stringify({ error: "Thi·∫øu tham s·ªë date ho·∫∑c endpoint kh√¥ng h·ª£p l·ªá." }), {
                status: 400,
                headers: { "Content-Type": "application/json" },
              });
            }
    
            await env.ORDERS_BUCKET.put("orders.json", JSON.stringify(orders));
    
            return new Response(JSON.stringify({ message: "ƒê√£ x√≥a d·ªØ li·ªáu th√†nh c√¥ng!" }), {
              status: 200,
              headers: { "Content-Type": "application/json", "Access-Control-Allow-Origin": "*" },
            });
          } catch (error) {
            return new Response(JSON.stringify({ error: "L·ªói khi x√≥a d·ªØ li·ªáu: " + error.message }), {
              status: 500,
              headers: { "Content-Type": "application/json" },
            });
          }
        }

    return new Response("Not Found", { status: 404 });
  }
};